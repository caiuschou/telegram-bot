# Telegram Bot Token (get from @BotFather)
# 实际测试时可以使用任意值，因为 Telegram API 会被 mock
BOT_TOKEN=your_bot_token_here

# OpenAI API Configuration (Required for integration tests)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-real-openai-api-key-here

# OpenAI Base URL (Optional, defaults to official API)
OPENAI_BASE_URL=https://api.openai.com/v1

# AI Model Configuration (Optional, defaults to gpt-3.5-turbo)
AI_MODEL=gpt-3.5-turbo

# Streaming Response Configuration (Optional)
AI_USE_STREAMING=false

# AI Thinking Message (Shown when AI is processing)
AI_THINKING_MESSAGE=Thinking...

# AI System Prompt (Optional; bot persona/behavior; used as OpenAI system message)
# AI_SYSTEM_PROMPT=你是一个...

# Database URL (SQLite file or PostgreSQL/MySQL connection string)
# Tests will override this with a temporary database
DATABASE_URL=file:./telegram_bot.db

# Memory Store Type: "lance" for Lance vector database, "memory" for in-memory, "sqlite" for SQLite
MEMORY_STORE_TYPE=lance

# Lance Database Path (Only used if MEMORY_STORE_TYPE=lance)
MEMORY_LANCE_PATH=./data/lance_db

# SQLite Memory Database Path (Only used if MEMORY_STORE_TYPE=sqlite or MEMORY_RECENT_USE_SQLITE=1)
MEMORY_SQLITE_PATH=./data/memory.db

# Use SQLite for recent messages only; semantic search still uses MEMORY_STORE_TYPE (e.g. lance). 1/true/yes to enable.
# MEMORY_RECENT_USE_SQLITE=0

# Log Level (Optional: trace, debug, info, warn, error)
RUST_LOG=info
